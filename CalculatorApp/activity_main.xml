<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20px"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.calculator.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textDisplay"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="0"
            android:textSize="200px"
            android:id="@+id/calculation"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/numberPad"
        android:orientation="vertical"
        android:layout_below="@+id/textDisplay">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BOne"
                android:onClick="BOne"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BTwo"
                android:onClick="BTwo"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BThree"
                android:onClick="BThree"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="40sp"
                android:background="@color/accent_material_dark"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BPlus"
                android:onClick="BPlus"></Button>
            ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BFour"
                android:onClick="BFour"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BFive"
                android:onClick="BFive"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/Bsix"
                android:onClick="BSix"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="40sp"
                android:background="@color/accent_material_dark"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BMinus"
                android:onClick="BMinus"></Button>
            ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BSeven"
                android:onClick="BSeven"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BEight"
                android:onClick="BEight"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BNine"
                android:onClick="BNine"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="*"
                android:textSize="40sp"
                android:background="@color/accent_material_dark"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BMult"
                android:onClick="BMult"></Button>
            ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="C"
                android:textSize="40sp"
                android:background="@android:color/holo_red_dark"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BC"
                android:onClick="BClear"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="40sp"
                android:background="@color/material_blue_grey_800"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BZero"
                android:onClick="BZero"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="/"
                android:textSize="40sp"
                android:background="@color/accent_material_dark"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BDivi"
                android:onClick="BDivi"></Button>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="="
                android:textSize="40sp"
                android:background="@android:color/holo_green_dark"
                android:textColor="@color/abc_primary_text_disable_only_material_dark"
                android:id="@+id/BEqual"></Button>
            ></LinearLayout>


        ></LinearLayout>
</RelativeLayout>
